<!-- views/index.ejs -->
<link rel="stylesheet" type="text/css" href="/css/styles.css">
<h2>Posts</h2>
<ul class="post-list">
  <% posts.forEach(post => { %>
    <li class="post">
      <h3 class="post-title"><%= post.title %></h3>
      <p class="post-content"><%= post.content %></p>
      <img class="post-image" src="<%= post.imageUrl %>" alt="Imagen relacionada">
      <p class="post-date">Fecha de creaci√≥n: <%= post.createdAt.toDateString() %></p>
      <div class="post-actions">
        <a href="/editar/<%= post.id %>">Editar</a>
        <form action="/delete/<%= post.id %>" method="POST">
          <button type="submit" class="delete-button">Eliminar</button>
        </form>
      </div>
    </li>
  <% }); %>
</ul>
<a href="/agregar" class="add-post-link">Agregar Post</a>

